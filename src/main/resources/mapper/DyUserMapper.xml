<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dy.dao.DyUserDao">
    <resultMap id="UserMessage" type="com.dy.model.DyUser">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
    </resultMap>
    <!--获取所有用户-->
    <select id="findAll" resultType="com.dy.model.DyUser" resultMap="UserMessage">
        select * from dy_user
        select * from dy_user where id = #{id}
    </select>

    <select id="findUser" resultType="com.dy.model.DyUser" parameterType="integer">
        select * from dy_user where id = #{id}
    </select>

    <insert id="addUser" parameterType="com.dy.model.DyUser">
        insert into dy_user (id,name,password) values (#{id},#{name},#{password})
    </insert>

    <delete id="deleteUser" parameterType="string">
        delete from dy_user where id = #{id};
    </delete>
</mapper>